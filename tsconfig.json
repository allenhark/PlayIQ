{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["src/*"],
      "~assets": ["assets"]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "lib": ["es6", "dom", "esnext", "es2022"],
    "target": "esnext",
    "skipLibCheck": true,
    "module": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".eslint.config.js",
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
